# 1PDF Environment Variables
# Copy this file to .env.local for local development

# App Configuration
NEXT_PUBLIC_APP_NAME="1PDF"
NEXT_PUBLIC_APP_URL="https://1pdf-app.vercel.app"

# Processing Limits (optional - defaults are set in code)
NEXT_PUBLIC_MAX_FILE_SIZE_MB=50
NEXT_PUBLIC_MAX_TOTAL_SIZE_MB=500
NEXT_PUBLIC_MAX_FILES=50
NEXT_PUBLIC_MAX_PAGES_PER_FILE=500
NEXT_PUBLIC_MAX_TOTAL_PAGES=2000

# Processing Timeouts (in minutes/seconds)
NEXT_PUBLIC_PROCESSING_TIMEOUT_MINUTES=30
NEXT_PUBLIC_FILE_LOAD_TIMEOUT_SECONDS=60
NEXT_PUBLIC_PAGE_RENDER_TIMEOUT_SECONDS=30

# Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=""
# SENTRY_ORG=""
# SENTRY_PROJECT=""

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Development
NODE_ENV=development